<% @articles.each do |article| %>
  <div class="card mb-4">
    <div class="card-body">
      <h2 class="card-title">
        <%= article.heading %>
      </h2>
      <p class="card-text">
        <%= article.content.html_safe%>
      </p>
      <a href="#" class="btn btn-primary">
        Read More &rarr;
      </a>
    </div>
    <div class="card-footer text-muted">
      Posted on January 1, 2017 by
      <a href="#">Start Bootstrap</a>
    </div>
  </div>
<% end %>